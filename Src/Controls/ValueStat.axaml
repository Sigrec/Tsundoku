<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:icon="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
		xmlns:vm="using:Tsundoku.ViewModels"
		x:DataType="vm:CollectionStatsViewModel"
        xmlns:controls="using:Tsundoku.Controls">
	<Style Selector="controls|ValueStat">
		<!-- Set Defaults -->
		<Setter Property="Template">
			<ControlTemplate>
				<Border Background="Transparent" Margin="10" BorderBrush="Transparent" BorderThickness="0" CornerRadius="8" BoxShadow="0 0 10 3 #B3000000">
					<Border CornerRadius="8" ClipToBounds="True">
						<Grid MinHeight="50" MinWidth="175" RowDefinitions="*,*" ColumnDefinitions="40,*" Background="{CompiledBinding CurrentThemeInstance.CollectionBGColor}" Cursor="Hand" ShowGridLines="false">
							<icon:Icon Value="{TemplateBinding Icon}" Foreground="{CompiledBinding CurrentThemeInstance.DividerColor}" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0"/>
							<TextBlock Name="ValueText" Text="{TemplateBinding Text}" Foreground="{CompiledBinding CurrentThemeInstance.MenuBGColor}" Grid.Row="0" Grid.Column="1" FontSize="22" FontWeight="Bold" VerticalAlignment="Bottom" HorizontalAlignment="Left" Padding="0,0,10,0"/>
							<TextBlock Text="{TemplateBinding Title}" Foreground="{CompiledBinding CurrentThemeInstance.MenuTextColor}" Grid.Row="1" Grid.Column="1" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-5,10,0"/>
						</Grid>
					</Border>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
